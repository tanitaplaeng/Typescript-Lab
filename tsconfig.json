{
    "compilerOptions": {
        "target": "es6", // what Typescript will be compiled to
        // "watch": true, // recompile code every time its saved, so we don't have to use tsc every time
        "module": "commonjs", // what type of module generator will be used
        "moduleResolution": "node", // how each module is resolved
        "sourceMap": true, // generates a `.map` file
        "removeComments": true, // removes all comments aside from the header comment
        // beginning with /*!
        "lib": [
            "es2015",
            "dom"
        ], // various types that Typescript can use
    }
}